<% title "Help" %>
<script type="text/javascript">
$(init);
function init() {
  //expand FAQ answers on click
  $(".question").click(function() {
    $(this).next().toggle("slow");
    return false;
  }).next().hide();
}
</script>
<h2>FAQ</h2>
<p>Click a question to expand the answer</p>
<div id="faq">
<!-- Search Form -->
<%= form_tag help_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<!-- loop through the FAQ's and display them -->
<% if @faqs.count < 1 %>
  <p>No items match your search</p>
<% end %>
<% @faqs.each do |q| %>
  <%= faq q.question, q.answer %>
<% end %>
</div>
<p>Still have a question? Visit our support site at <%= link_to "support.sketchlabhq.com", "http://support.sketchlabhq.com" %>.</p>
