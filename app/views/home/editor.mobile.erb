<%= include_stylesheets :mobilecanvas, :media => "all" %>
<%= include_javascripts :mobilecanvas %>
<script type="text/javascript">
localStorage["data"] = '<%= @sketch.content.html_safe %>';
</script>
<div id="canvas"></div>
<!-- buttons for changing the canvas' size -->
<div style="text-align:center">
	<a href="#" data-role="button" data-theme="b" data-inline="true" data-icon="arrow-d" id="enlargeBtn" data-iconpos="notext">Enlarge Canvas</a>
	<a href="#" data-role="button" data-theme="b" data-inline="true" data-icon="arrow-u" id="reduceBtn" data-iconpos="notext">Reduce Canvas</a>
</div>
