<% title 'Public Sketches' %>
<%= include_stylesheets :publicindex %>
<h1><%= @title %></h1>

<%= form_tag public_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="public">
  <tr>
    <th><%= sortable 'name' %></th>
    <th><%= sortable 'author' %></th>
    <th><%= sortable 'updated_at', 'Updated' %></th>
  </tr>
  <% @sketches.each do |sketch| %>
    <tr>
      <td><%= link_to sketch.name, "/public/#{sketch.id}" %></td>
      <td><%= sketch.author %></td>
      <td><%= sketch.updated_at.strftime("%B %e, %Y") %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @sketches %>
