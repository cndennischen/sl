- title 'Public Sketches'
= include_stylesheets :publicindex
%h1= @title

= form_tag public_path, :method => 'get' do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil

= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]

%table.public
  %tr
    %th= sortable 'name'
    %th= sortable 'updated_at', 'Updated'

  - @sketches.each do |sketch|
    %tr
      %td= link_to sketch.name, "/public/#{sketch.id}"
      %td= sketch.updated_at.strftime("%B %e, %Y")

= will_paginate @sketches
